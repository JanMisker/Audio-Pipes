{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "author": "Jan Misker",
  "version": "0.6.0",
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [],
  "browser_action": {
    "default_title": "__MSG_appName__",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["js/inject-tracing.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["images/*", "js/*"],
  "icons": {
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
