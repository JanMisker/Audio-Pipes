
{
  "manifest_version": 2,
  "name": "Audio Pipes",
  "author": "Jan Misker",
  "version": "0.5.2",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Audio Pipes",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at" : "document_start",
      "js": ["js/inject-tracing.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "images/*",
    "js/*"
  ],
  "icons": {
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}